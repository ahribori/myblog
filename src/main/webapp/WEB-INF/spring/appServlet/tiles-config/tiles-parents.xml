<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<!-- 
	right div가 있는 default와 없는 wide 두가지 템플릿을 정의해놓고 
	상황에 맞게 상속해서 사용할 것이다.
 -->
<tiles-definitions>
	<definition name="default" template="/WEB-INF/views/templates/layout_default.jsp">
		<put-attribute name="header" value="/WEB-INF/views/templates/header.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/views/templates/menu.jsp"/>
		<put-attribute name="right" value="/WEB-INF/views/templates/right.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/templates/footer.jsp"/>
	</definition>
	<definition name="wide" template="/WEB-INF/views/templates/layout_wide.jsp">
		<put-attribute name="header" value="/WEB-INF/views/templates/header.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/views/templates/menu.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/templates/footer.jsp"/>
	</definition>
</tiles-definitions>