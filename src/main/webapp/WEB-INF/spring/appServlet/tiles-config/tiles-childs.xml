<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
	
	<definition name="home1" extends="default">
		<put-attribute name="header" value="/WEB-INF/views/templates/header.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/views/templates/menu.jsp"/>
		<put-attribute name="right" value="/WEB-INF/views/templates/right.jsp"/>
		<put-attribute name="main" value="/WEB-INF/views/home.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/templates/footer.jsp"/>
	</definition>
	
	<definition name="board_default/*" extends="default">
		<put-attribute name="main" value="/WEB-INF/views/board/{1}.jsp" />
	</definition>
	<definition name="board_default/*/*" extends="default">
		<put-attribute name="main" value="/WEB-INF/views/board/{1}/{2}.jsp" />
	</definition>
	<definition name="board_wide/*" extends="wide">
		<put-attribute name="main" value="/WEB-INF/views/board/{1}.jsp" />
	</definition>
	<definition name="board_wide/*/*" extends="wide">
		<put-attribute name="main" value="/WEB-INF/views/board/{1}/{2}.jsp" />
	</definition>
	
	<definition name="user_default/*" extends="default">
		<put-attribute name="main" value="/WEB-INF/views/user/{1}.jsp" />
	</definition>
	<definition name="user_default/*/*" extends="default">
		<put-attribute name="main" value="/WEB-INF/views/user/{1}/{2}.jsp" />
	</definition>
	<definition name="user_wide/*" extends="wide">
		<put-attribute name="main" value="/WEB-INF/views/user/{1}.jsp" />
	</definition>
	<definition name="user_wide/*/*" extends="wide">
		<put-attribute name="main" value="/WEB-INF/views/user/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>